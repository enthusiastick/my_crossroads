<h1> <%= link_to "Bank of Derrikham", bank_accounts_path %> </h1>
<h3> <%= @character.name %>'s Bank Account</h3>
<div> Balance: <%= @account.balance  %> </div>

<div>
<%= link_to "New Transaction", new_character_bank_account_bank_transaction_path(@character.id,@account.id) %>
</div>

<div>
  <h1>Transaction History</h1>
<% @transactions.each do |tran| %>
  <p>
    <span class="tranRecord">
    <%= tran.created_at.strftime("%D") %>
    <%= tran.created_at.strftime("%R") %>
    </span>
    <%= tran.transaction_type %>:
    <%= tran.transaction_amount %> Drake

  </p>
<% end %>
</div>
