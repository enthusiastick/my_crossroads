<%= form_for [:staff, @recipe] do |f| %>
    <%= f.label :extraction_ingredient_id %>
    <%= f.collection_select(:extraction_ingredient_id, @ingredients, :id, :name, {include_blank:true}) %>

    <%= f.label :calcination_ingredient_id %>
    <%= f.collection_select(:calcination_ingredient_id, @ingredients, :id, :name, {include_blank:true}) %>

    <%= f.label :dissolution_ingredient_id %>
    <%= f.collection_select(:dissolution_ingredient_id, @ingredients, :id, :name, {include_blank:true}) %>

    <%= f.label :concentration_ingredient_id %>
    <%= f.collection_select(:concentration_ingredient_id, @ingredients, :id, :name, {include_blank:true}) %>

    <%= f.label :name %>
    <%= f.text_field :name  %>

    <%= f.label :category  %>
    <%= f.select :category, options_for_select(Recipe.categories{ |value| [value]}, selected:@category), include_blank:true %>

    <%= f.label :effect_family  %>
    <%= f.select :effect_family, options_for_select(Recipe.effect_families{ |value| [value]}, selected:@effect_family), include_blank:true %>

    <%= f.label :application_time  %>
    <%= f.text_field :application_time  %>

    <%= f.label :duration  %>
    <%= f.text_field :duration  %>

    <%= f.label :expiration  %>
    <%= f.text_field :expiration  %>

    <%= f.label :effect  %>
    <%= f.text_field :effect  %>

    <%= f.label :description  %>
    <%= f.text_area :description  %>


    <%= f.submit %>
<% end %>
