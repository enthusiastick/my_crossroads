.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Components", staff_components_path
        %li
          %span.show-for-sr Current:
          Component Visual Dictionary
.row.top-padded{ data: { equalizer: "" } }
  -@components.each do |component|
    .small-12.medium-3.large-2.columns.end.text-center
      =link_to staff_component_path(component) do
        .callout.primary.small{ data: { equalizer: { watch: "" } } }
          =image_tag(component.picture.thumb.url, alt: "Thumbnail Picture of #{component.name}", class: "thumbnail margin-bottom-none")
          %div
            -if component.staff_notes.nil? || component.staff_notes.empty?
              =component.name
            -else
              %span.has-tip{aria: { haspopup: true }, data: { disable: { hover: false }, tooltip: "" }, tabindex: 1, title: component.staff_notes }
                =component.name
