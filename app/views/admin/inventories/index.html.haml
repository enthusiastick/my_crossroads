.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Users", admin_users_path
        %li
          =link_to @character.user.handle, admin_user_path(@character.user)
        %li
          =link_to "Characters", admin_characters_path
        %li
          =link_to @character.name, admin_user_character_path(@character.user, @character)
        %li
          %span.show-for-sr Current:
          Edit Inventory
    %h1.margin-bottom-none.text-center
      =@character.name
    %h3.text-center
      Edit Inventory
    =form_for @character, url: admin_character_inventory_path(@character) do |f|
      .text-center
        =button_to_add_inventory(f)
      .form-inputs
        -@character.inventories.each do |inventory|
          =f.fields_for :inventories, inventory do |b|
            .row
              .small-3.medium-2.columns
                %fieldset
                  =b.label :quantity, "Quantity"
                  =b.number_field :quantity
              .small-9.medium-10.columns
                %p.margin-top-two= inventory.ingredient.name
        .form-actions#form-actions
          =f.submit "Save", class: "button"
