.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Users", staff_users_path
        %li
          =link_to @character.user.handle, staff_user_path(@character.user)
        %li
          =link_to "Characters", staff_characters_path
        %li
          =link_to @character.name, staff_user_character_path(@character.user, @character)
        %li
          %span.show-for-sr Current:
          Edit Inventory
    %h1.margin-bottom-none.text-center
      =@character.name
    %h3.text-center
      Edit Inventory
    =form_for @character, url: staff_character_inventory_path(@character) do |f|
      .text-center
        =button_to_add_inventory(f)
      %table.form-inputs.hover
        %thead
          %tr
            %th.text-right Quantity
            %th.text-center Component
            %th.text-center Primary
            %th.text-center Secondary
            %th.text-center Tertiary
        %tbody#form-inputs
          -@character.inventories.each do |inventory|
            %tr
              =f.fields_for :inventories, inventory do |b|
                %td
                  %fieldset
                    =b.number_field :quantity, class: "text-right"
                %td.text-center
                  =link_to staff_component_path(inventory.ingredient) do
                    %span.label.secondary
                      %strong= inventory.ingredient.name
                %td.text-center
                  %fieldset
                    =b.check_box :primary
                %td.text-center
                  %fieldset
                    =b.check_box :secondary
                %td.text-center
                  %fieldset
                    =b.check_box :tertiary
      .row
        .small-12.columns
          .form-actions
            =f.submit "Save", class: "button"
