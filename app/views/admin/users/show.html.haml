.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Users", admin_users_path
        %li
          %span.show-for-sr Current:
          =@user.handle
    %h1.text-center
      =@user.handle
    %p
      %strong Name:
      =@user.full_name
    %p
      %strong Email:
      =link_to @user.email, "mailto:#{@user.email}"
    %p
      %strong Member For:
      =distance_of_time_in_words_to_now(@user.created_at)
    -unless @user.characters.empty?
      %h3.text-center Characters
      %table.hover.stack
        %thead
          %tr
            %th Name
            %th Race
        %tbody
          -@user.characters.each do |character|
            %tr
              %td= link_to character.name, admin_user_character_path(character.user, character)
              %td= character.race.titleize

