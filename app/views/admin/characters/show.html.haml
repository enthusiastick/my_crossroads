.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Users", admin_users_path
        %li
          =link_to @character.user.handle, admin_user_path(@character.user)
        %li
          =link_to "Characters", admin_characters_path
        %li
          %span.show-for-sr Current:
          =@character.name
    %h1.text-center
      =@character.name
      =link_to edit_admin_user_character_path(@character.user, @character) do
        %i.fa.fa-pencil-square-o{"aria-hidden": "true"}
      =link_to admin_character_path(@character), method: :delete, data: { confirm: "Delete character '#{@character.name}': are you sure?" } do
        %i.fa.fa-trash{"aria-hidden": "true"}
      %a{"data-open": "historyModal"}
        %i.fa.fa-book{"aria-hidden": "true"}
    %p.text-center= @character.race.titleize
    -if @character.inventories.empty?
      %p.text-center
        =link_to admin_user_character_inventories_path(@character.user, @character), class: "button" do
          %i.fa.fa-list-ol
          Edit Components Inventory
    -else @character.inventories.empty?
      .callout
        %h2.text-center
          Components Inventory
          =link_to admin_user_character_inventories_path(@character.user, @character) do
            %i.fa.fa-list-ol{"aria-hidden": "true"}
        %table.hover
          %thead
            %tr
              %th.text-right Quantity
              %th Component
          %tbody
            -@character.inventories.each do |inventory|
              %tr
                %td.text-right= inventory.quantity
                %td= inventory.ingredient.name
.reveal#historyModal{"data-reveal": ""}
  %h2.margin-bottom-none.text-center Character History
  %hr/
  -if @character.history.blank?
    %p
      %em (blank)
  -else
    =raw @markdown.render(@character.history)
  %button.close-button{"data-close": "", "aria-label": "Close modal", "type": "button"}
    %span{"aria-hidden": "true"}
      &times;
