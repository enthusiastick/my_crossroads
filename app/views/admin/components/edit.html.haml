.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Components", admin_components_path
        %li
          =link_to @component.name, admin_component_path(@component)
        %li
          %span.show-for-sr Current:
          Edit
    %h1.text-center
      =@component.name
      =link_to admin_component_path(@component), method: :delete, data: { confirm: "Delete component '#{@component.name}': are you sure?" } do
        %i.fa.fa-times-circle
    =render partial: "form"
