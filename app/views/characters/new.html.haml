-content_for :title do
  MyCrossroads: New Character
.row
  .small-12.columns
    %h1.text-center.top-padded New Character
    =form_for @character do |f|
      .form-inputs
        %fieldset
          =render partial: "text_field_with_errors", locals: {attribute: :name, form: f, model: @character}
        %fieldset
          =f.select :race, options_for_select(Character.enum_collection(:races))
      .form-actions
        =f.submit "Create", class: "button"
