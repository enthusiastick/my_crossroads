.row
  .small-12.columns
    %nav.top-padded{"aria-label": "You are here:", role: "navigation"}
      %ul.breadcrumbs
        %li
          =link_to "Characters", characters_path
        %li
          %span.show-for-sr Current:
          =@character.name
    %h1.text-center
      =@character.name
      =link_to edit_user_character_path(current_user, @character) do
        %i.fa.fa-pencil-square-o{"aria-hidden": "true"}
    %p.text-center= @character.race.titleize
    -unless @character.history.blank?
      .callout.primary= raw @markdown.render(@character.history)
